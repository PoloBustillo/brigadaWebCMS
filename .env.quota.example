# ============================================
# QUOTA SERVICE CONFIGURATION
# ============================================
# Variables necesarias para obtener información de quota de servicios externos

# RENDER API
# Obtén tu API token aquí: https://render.com/account/api-tokens
NEXT_PUBLIC_RENDER_API_KEY=

# NEON DB API
# Obtén tu API key aquí: https://console.neon.tech/app/settings/api-keys
NEXT_PUBLIC_NEON_API_KEY=

# Obtén tu Project ID en https://console.neon.tech
NEXT_PUBLIC_NEON_PROJECT_ID=

# CLOUDINARY API
# Configuración de Cloudinary para obtener información de almacenamiento
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=

# IMPORTANTE: Esta es una variable secreta que NO debe exponerse al cliente
# Solo se usa en el servidor Node.js
CLOUDINARY_API_SECRET=
